{
  "window.zoomLevel": 0.75,
  "workbench.tree.indent": 15,
  "workbench.startupEditor": "none",
  "editor.fontFamily": "Inconsolata, JetBrainsMono Nerd Font",
  "editor.fontLigatures": false,
  "editor.fontSize": 18,
  "editor.fontWeight": 400,
  "editor.lineHeight": 26,
  "editor.tabSize": 2,
  "editor.lineNumbers": "on",
  "editor.insertSpaces": false,
  "editor.cursorSurroundingLines": 10,
  // 超過頁面自動斷行
  "editor.wordWrap": "on",
  // "editor.bracketPairColorization.enabled": false,
  // 打開 vscode 時不要打開上次的專案
  "window.restoreWindows": "none",
  // advanced-new-file
  "advancedNewFile.exclude": {
    "node_modules": true,
    "node_modules_electron": true,
    "dev": true,
    "dist": true
  },
  "advancedNewFile.showInformationMessages": true,
  "advancedNewFile.convenienceOptions": ["last", "current", "root"],
  // ESLint settings
  "editor.renderControlCharacters": false,
  "editor.formatOnSave": false,
  "eslint.alwaysShowStatus": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true
  },
  "eslint.validate": ["javascript", "javascriptreact", "typescript", "typescriptreact", "html", "vue"],
  // spellCheck settings
  "cSpell.enabled": true,
  "cSpell.numSuggestions": 10,
  "cSpell.ignoreWords": ["swiper"],
  // Vim
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.surround": true,
  "vim.easymotionMarkerooundColor": "#020202",
  // key-binds
  "vim.leader": "<space>",
  // visualMode
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "after": [">", "g", "v"]
    },
    {
      "before": ["<"],
      "after": ["<", "g", "v"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["z", "c"],
      "commands": ["editor.toggleFold"]
    },
    // Improving the file explorer usage
    {
      "before": ["<leader>", "t"],
      "commands": ["workbench.action.toggleSidebarVisibility"]
    },
    {
      "before": ["<leader>", "n"],
      "commands": [":set hlsearch!"]
    },
    {
      "before": [["<C-w>"]],
      "commands": ["workbench.action.closeActiveEditor"]
    },
    {
      "before": ["<leader>", "f"],
      "commands": ["revealInExplorer"]
    },
    // switch windows
    {
      "before": ["<leader>", "]"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<leader>", "["],
      "commands": ["workbench.action.previousEditor"]
    },
    // Rename
    {
      "before": ["<leader>", "r"],
      "commands": ["editor.action.rename"]
    }
  ],
  // "bracketPairColorizer.depreciation-notice": false,
  "workbench.colorCustomizations": {
    "statusBar.background": "#007575",
    "statusBar.noFolderBackground": "#007575",
    "statusBar.debuggingBackground": "#007575"
  },
  // todo-tree config
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "foreground": "black",
      "background": "darkTurquoise",
      "icon": "check",
      "iconColour": "darkTurquoise",
      "gutterIcon": true
    },
    "FIXME": {
      "foreground": "black",
      "background": "red",
      "icon": "alert",
      "iconColour": "red",
      "gutterIcon": true
    },
    "NOTE": {
      "background": "azure",
      "foreground": "black",
      "icon": "note",
      "iconColour": "azure",
      "gutterIcon": true
    },
    "HACK": {
      "background": "indianRed",
      "foreground": "black",
      "icon": "flame",
      "iconColour": "indianRed",
      "gutterIcon": true
    }
  },
  "todo-tree.general.tags": ["BUG", "HACK", "FIXME", "TODO", "NOTE"],
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // gitlens config
  "gitlens.currentLine.enabled": false,
  "[javascript]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "diffEditor.ignoreTrimWhitespace": false,
  "editor.guides.bracketPairs": true,
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  }
}
